{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Number of top universities by country",
        "fontSize": 18,
        "font": "Open Sans"
    },
    "background": "#BFFCFB",
    "width": "container",
    "height": 500,
    "projection": {
        "type": "equalEarth"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/BryanC-000/FIT3179/main/week9_homework/js/map.geo.json",
        "format": {
            "type": "topojson",
            "feature": "custom.geo"
        }
    },
    "layer": [
        {
            "transform": [
                {
                    "calculate": "'No top universities in ' + datum.properties.name",
                    "as": "note"
                }
            ],
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "tooltip": {
                    "field": "note"
                }
            }
        },
        {
            "transform": [
                {
                    "lookup": "properties.name",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/BryanC-000/FIT3179/main/week9_homework/data/university_count_by_country.csv"
                        },
                        "key": "Country",
                        "fields": [
                            "university_count"
                        ]
                    }
                }
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "white",
                "strokeWidth": 0.5
            },
            "encoding": {
                "color": {
                    "field": "university_count",
                    "type": "quantitative",
                    "scale": {
                        "type": "threshold",
                        "domain": [
                            3,
                            10,
                            30,
                            50
                        ],
                        "range": [
                            "#aec7e8",
                            "#8ba3cd",
                            "#6c7fb2",
                            "#505d96",
                            "#393b79"
                        ]
                    },
                    "legend": {
                        "title": "Number Of Universities",
                        "titleFont": "Open Sans",
                        "titleFontSize": 16,
                        "direction": "horizontal",
                        "orient": "bottom-left",
                        "labelFont": "Open Sans",
                        "labelFontSize": 14,
                        "gradientLength": 200
                    }
                },
                "tooltip": [
                    {
                        "field": "properties.name",
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "university_count",
                        "type": "quantitative",
                        "title": "Number of top universities"
                    }
                ]
            }
        }
    ],
    "config": {
        "style": {
            "cell": {
                "stroke": "gray"
            }
        }
    }
}