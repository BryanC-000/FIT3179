{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "title": "Metrics of top 10 universities (2005 - 2018)",
    "width": 550,
    "height": 400,
    "padding": 50,
    "autosize": {
        "type": "none",
        "contains": "padding"
    },
    "signals": [
        {
            "name": "radius",
            "update": "150"
        },
        {
            "name": "Year_selection",
            "value": 2018,
            "bind": {
                "input": "range",
                "min": 2005,
                "max": 2018,
                "step": 1,
                "name": "Year selection: "
            }
        },
        {
            "name": "Harvard_select",
            "value": 1,
            "bind": {
                "input": "checkbox",
                "name": "Harvard University "
            }
        },
        {
            "name": "Stanford_select",
            "value": 1,
            "bind": {
                "input": "checkbox",
                "name": "Stanford University "
            }
        },
        {
            "name": "Cambridge_select",
            "bind": {
                "input": "checkbox",
                "name": "University of Cambridge "
            }
        },
        {
            "name": "Massachusetts_select",
            "bind": {
                "input": "checkbox",
                "name": "Massachusetts Institute of Technology "
            }
        },
        {
            "name": "California_select",
            "bind": {
                "input": "checkbox",
                "name": "University of California, Berkeley "
            }
        },
        {
            "name": "Princeton_select",
            "bind": {
                "input": "checkbox",
                "name": "Princeton University "
            }
        },
        {
            "name": "Oxford_select",
            "bind": {
                "input": "checkbox",
                "name": "University of Oxford "
            }
        },
        {
            "name": "Columbia_select",
            "bind": {
                "input": "checkbox",
                "name": "Columbia University "
            }
        },
        {
            "name": "California2_select",
            "bind": {
                "input": "checkbox",
                "name": "California Institute of Technology "
            }
        },
        {
            "name": "Chicago_select",
            "bind": {
                "input": "checkbox",
                "name": "University of Chicago "
            }
        }
    ],
    "data": [
        {
            "name": "table",
            "url": "https://raw.githubusercontent.com/BryanC-000/FIT3179/main/Visualization2/data/radarchart.csv",
            "format": {
                "type": "csv"
            },
            "transform": [
                {
                    "type": "filter",
                    "expr": "datum.year == Year_selection"
                },
                {
                    "type": "filter",
                    "expr": "(datum.include == Harvard_select && datum.university == 'Harvard University')||(datum.include == Stanford_select && datum.university == 'Stanford University')||(datum.include == Cambridge_select && datum.university == 'University of Cambridge')||(datum.include == Massachusetts_select && datum.university == 'Massachusetts Institute of Technology')||(datum.include == California_select && datum.university == 'University of California, Berkeley')||(datum.include == Princeton_select && datum.university == 'Princeton University')||(datum.include == Oxford_select && datum.university == 'University of Oxford')||(datum.include == Columbia_select && datum.university == 'Columbia University')||(datum.include == California2_select && datum.university == 'California Institute of Technology')||(datum.include == Chicago_select && datum.university == 'University of Chicago')"
                }
            ]
        },
        {
            "name": "keys",
            "source": "table",
            "transform": [
                {
                    "type": "aggregate",
                    "groupby": [
                        "key"
                    ]
                }
            ]
        }
    ],
    "scales": [
        {
            "name": "angular",
            "type": "point",
            "range": {
                "signal": "[-PI,PI]"
            },
            "padding": 0.5,
            "domain": {
                "data": "table",
                "field": "key"
            }
        },
        {
            "name": "radial",
            "type": "linear",
            "range": {
                "signal": "[0, radius]"
            },
            "zero": true,
            "nice": false,
            "domain": {
                "data": "table",
                "field": "value"
            },
            "domainMin": 0
        },
        {
            "name": "color",
            "type": "ordinal",
            "domain": {
                "data": "table",
                "field": "university"
            },
            "range": {
                "scheme": "category10"
            }
        }
    ],
    "encode": {
        "enter": {
            "x": {
                "signal": "radius"
            },
            "y": {
                "signal": "radius"
            }
        }
    },
    "marks": [
        {
            "type": "group",
            "name": "categories",
            "zindex": 1,
            "from": {
                "facet": {
                    "data": "table",
                    "name": "facet",
                    "groupby": [
                        "university"
                    ]
                }
            },
            "marks": [
                {
                    "type": "line",
                    "name": "university-line",
                    "from": {
                        "data": "facet"
                    },
                    "encode": {
                        "enter": {
                            "interpolate": {
                                "value": "linear-closed"
                            },
                            "x": {
                                "signal": "scale('radial', datum.value) * cos(scale('angular', datum.key))"
                            },
                            "y": {
                                "signal": "scale('radial', datum.value) * sin(scale('angular', datum.key))"
                            },
                            "stroke": {
                                "scale": "color",
                                "field": "university"
                            },
                            "strokeWidth": {
                                "value": 1
                            },
                            "fill": {
                                "scale": "color",
                                "field": "university"
                            },
                            "fillOpacity": {
                                "value": 0.1
                            }
                        }
                    }
                }
            ]
        },
        {
            "type": "rule",
            "name": "radial-grid",
            "from": {
                "data": "keys"
            },
            "zindex": 0,
            "encode": {
                "enter": {
                    "x": {
                        "value": 0
                    },
                    "y": {
                        "value": 0
                    },
                    "x2": {
                        "signal": "radius * cos(scale('angular', datum.key))"
                    },
                    "y2": {
                        "signal": "radius * sin(scale('angular', datum.key))"
                    },
                    "stroke": {
                        "value": "lightgray"
                    },
                    "strokeWidth": {
                        "value": 1
                    }
                }
            }
        },
        {
            "type": "text",
            "name": "key-label",
            "from": {
                "data": "keys"
            },
            "zindex": 1,
            "encode": {
                "enter": {
                    "x": {
                        "signal": "(radius + 5) * cos(scale('angular', datum.key))"
                    },
                    "y": {
                        "signal": "(radius + 5) * sin(scale('angular', datum.key))"
                    },
                    "text": {
                        "field": "key"
                    },
                    "align": [
                        {
                            "test": "abs(scale('angular', datum.key)) > PI / 2",
                            "value": "right"
                        },
                        {
                            "value": "left"
                        }
                    ],
                    "baseline": [
                        {
                            "test": "scale('angular', datum.key) > 0",
                            "value": "top"
                        },
                        {
                            "test": "scale('angular', datum.key) == 0",
                            "value": "middle"
                        },
                        {
                            "value": "bottom"
                        }
                    ],
                    "fill": {
                        "value": "black"
                    },
                    "fontWeight": {
                        "value": "bold"
                    }
                }
            }
        },
        {
            "type": "line",
            "name": "outer-line",
            "from": {
                "data": "radial-grid"
            },
            "encode": {
                "enter": {
                    "interpolate": {
                        "value": "linear-closed"
                    },
                    "x": {
                        "field": "x2"
                    },
                    "y": {
                        "field": "y2"
                    },
                    "stroke": {
                        "value": "gray"
                    },
                    "strokeWidth": {
                        "value": 1
                    }
                }
            }
        }
    ],
    "legends": [
        {
            "fill": "color",
            "title": "University",
            "orient": "none",
            "legendX": 190,
            "legendY": 40,
            "encode": {
                "symbols": {
                    "enter": {
                        "fillOpacity": {
                            "value": 0.5
                        }
                    }
                },
                "labels": {
                    "update": {
                        "text": {
                            "field": "value"
                        }
                    }
                }
            }
        }
    ]
}